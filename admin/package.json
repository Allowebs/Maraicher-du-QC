{
  "name": "teikei-admin",
  "description": "Teikei Admin server. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "version": "0.0.8",
  "homepage": "",
  "main": "src",
  "keywords": [
    "csa",
    "farming",
    "agriculture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teikei/teikei"
  },
  "author": "Simon Jockers, Daniel Mack, Tobias Preu√ü, Christian Rijke",
  "license": "AGPL-3.0",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/teikei/teikei/issues"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "scripts": {
    "test": "yarn run eslint && yarn run mocha",
    "eslint": "eslint src/. test/. --config .eslintrc.json",
    "start": "npx babel-watch src/index.js -x src/config| npx pino-colada",
    "start-debug": "DEBUG=* babel-watch src/index.js",
    "mocha": "mocha test/ --recursive --exit",
    "lint-fix": "eslint --fix src",
    "lint": "npx eslint .",
    "prettier": "npx pretty-quick --staged"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-admin": "1.3.2",
    "express-pino-logger": "^3.0.2",
    "pg": "7.4.3",
    "pino": "^4.17.3",
    "pino-colada": "^1.4.4"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.4",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-watch": "2.0.7",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jest": "21.17.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.9.1",
    "jest": "23.1.0",
    "mocha": "5.2.0",
    "prettier": "1.13.5",
    "request": "2.87.0",
    "request-promise": "4.2.2",
    "watchman": "1.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-extra-semi": 2,
      "semi": 0,
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "node": true,
      "jest/globals": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
