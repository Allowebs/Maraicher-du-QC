{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "babelOptions": {
      "babelrc": true,
      "configFile": "./packages/api/.babelrc"
    }
  },
  "ignorePatterns": [
    "build/**"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  },
  "env": {
    "jest/globals": true,
    "browser": true
  },
  "plugins": [
    "jest"
  ],
  "extends": [
    "standard",
    "prettier"
  ]
}
