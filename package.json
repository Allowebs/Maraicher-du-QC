{
  "name": "teikei",
  "version": "0.0.8",
  "description": "Teikei root monorepo. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "main": "index.js",
  "repository": "https://github.com/teikei/teikei.git",
  "author": "Simon Jockers, Daniel Mack, Tobias Preu√ü, Christian Rijke",
  "license": "AGPL-3.0",
  "private": true,
  "devDependencies": {
    "husky": "0.14.3",
    "npm-run-all": "4.1.3"
  },
  "scripts": {
    "dev-api": "cd api && yarn dev",
    "dev-map": "cd map && yarn start",
    "start-debug-api": "cd api && yarn dev-debug",
    "build-api": "cd api && yarn build",
    "build-map": "cd map && yarn build",
    "clean-api": "cd api && yarn clean",
    "clean-map": "cd map && yarn clean",
    "start-api": "cd api && yarn start",
    "start-map": "cd map && yarn start",
    "setup": "node node_modules/husky/bin/install.js && rm -f $(pwd)/map/src/schemas && ln -sf $(pwd)/schemas $(pwd)/map/src/schemas",
    "build": "run-p build-api build-map",
    "dev": "yarn setup && run-p dev-api dev-map",
    "dev-debug": "yarn setup && run-p start-debug-api start-map",
    "start": "ENVIRONMENT=production run-p start-api start-map",
    "clean": "run-p clean-api clean-map"
  },
  "husky": {
    "hooks": {
      "pre-push": "cd admin && yarn lint && cd ../api && yarn lint && cd ../map && yarn lint && cd ../migrations && yarn lint",
      "pre-commit": "cd admin && yarn prettier && cd ../api && yarn prettier && cd ../map && yarn prettier && cd ../migrations && yarn prettier"
    }
  },
  "workspaces": [
    "api",
    "admin",
    "map",
    "migrations",
    "schemas"
  ]
}
